<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SEEK Ad Posting API Client</Description>
    <TargetFramework>net452</TargetFramework>
    <AssemblyName>SEEK.AdPostingApi.Client</AssemblyName>
    <PackageId>SEEK.AdPostingApi.Client</PackageId>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="Marvin.JsonPatch" Version="0.9.0" />
    <PackageReference Include="Tavis.UriTemplates" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net452' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>
</Project>